<%- include('partials/header.ejs') %>
<div class="container" style="margin-top: 25px;">

    <div class="col-md-6" id="profile">
        <div class="panel panel-danger" id="clicked">
            <div class="panel-heading" align="center"><h4><%= data[0].name %></h4></div>
            <div class="col-md-4" style="padding-top: 10px">
                <div class="dashboard-stat red-intense" align="center" style="border-width: 5px; border-style: solid">
                    <div class="visual">
                        <i class="fa fa-users"></i>

                    </div>
                    <div class="details">
                        <div class="number">
                            <%= data[0].raw.numplayers %>
                        </div>
                        <div class="desc">
                            Online
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-8">
                <h4>Address: <%= data[0].query.address %></h4>

                <h4>Map: <%= data[0].map %></h4>
            </div>
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Player</th>
                    <th>Name</th>
                    <th>Score</th>
                    <th></th>
                </tr>
                </thead>
                <% for(var i = 0; i < data[0].players.length; i++) { %>
                <tr>
                    <th><%= i + 1 %></th>
                    <th><%= data[0].players[i].name %></th>
                    <th><%= data[0].players[i].score %></th>
                    <th><a href="/profile/<%= data[0].players[i].name %>">View More</a></th>
                </tr>
                <% } %>
            </table>


        </div>
    </div>
