<%- include('partials/header.ejs') %>
<div class="container" style="margin-top: 25px;">

    <div class="col-md-12">
        <div class="panel panel-danger">
            <div class="panel-heading" align="center"><h4>Top 10 Players by Rank (Active in 30 days)</h4></div>
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Rank</th>
                    <th>Name</th>
                    <th>Wins</th>
                    <th>Losses</th>
                    <th>Rating</th>
                    <th>Last Date</th>
                    <th></th>
                </tr>
                </thead>
                <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                    <th><%= i + 1 %></th>
                    <th id="link<%= i %>"><a
                                href="https://steamcommunity.com/profiles/<%= data[i].auth %>/"><%= data[i].name %></a>
                    </th>
                    <th><%= data[i].wins %></th>
                    <th><%= data[i].losses %></th>
                    <th><%= data[i].rating %></th>
                    <th><%= new Date(data[i].lastTime * 1000) %></th>
                    <th><a href="/profile/<%= data[i].name %>">View More</a></th>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>
